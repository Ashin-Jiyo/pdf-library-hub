# Firebase Configuration
# Get these from: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ImageKit Configuration - Primary Account (for files 10MB-25MB)
# Get these from: https://imagekit.io/dashboard - FREE TIER: 20GB storage, 20GB bandwidth/month
VITE_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
VITE_IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id

# ImageKit Configuration - Secondary Account (for files < 10MB)
# Create a second ImageKit account for better quota management
VITE_IMAGEKIT_SMALL_PUBLIC_KEY=your_small_files_public_key
VITE_IMAGEKIT_SMALL_PRIVATE_KEY=your_small_files_private_key
VITE_IMAGEKIT_SMALL_URL_ENDPOINT=https://ik.imagekit.io/your_small_account_id

# Appwrite Configuration (Optional - for files 25MB-50MB)
# Get these from: https://cloud.appwrite.io/
# 1. Create a new project
# 2. Go to Project Settings > General to get Project ID
# 3. Create a storage bucket named 'pdfs' in Storage section
# 4. Set bucket permissions to allow public read access
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_actual_project_id_here
VITE_APPWRITE_BUCKET_ID=pdfs

# EmailJS Configuration (for contact forms)
# Get these from: https://www.emailjs.com/
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
